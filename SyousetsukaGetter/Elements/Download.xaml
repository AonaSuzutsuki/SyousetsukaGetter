<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SyousetsukaGetter.Elements"
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Class="SyousetsukaGetter.Elements.Download"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="25">
    <Grid>
        <StackPanel Orientation="Horizontal" Background="{TemplateBinding Control.Background}">
            <Grid Width="25" Height="25">
                <Ellipse Margin="5,5,0,0" Stroke="White" StrokeThickness="1" Width="15" Height="15" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <Path StrokeThickness="1" Stroke="White" Data="M 0,10 L 5,15 L 10,10 M 5,0 L 5,15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
            <ContentPresenter Margin="4,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>

    </Grid>
</UserControl>
